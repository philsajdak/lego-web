<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title>Collection</title>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container mx-auto">
        <div class="hero">
            <div class="hero-content text-center">
                <div class="max-w-md mx-auto">
                    <h1 class="text-4xl md:text-5xl font-bold">Collection</h1>
                    <p class="py-6">Check out some of these themes to start:</p>
                    <div class="flex justify-center space-x-4">
                        <a href="/lego/sets?theme=Space+Port" class="btn btn-sm btn-accent">Space Port</a>
                        <a href="/lego/sets?theme=Ninjago" class="btn btn-sm btn-accent">Ninjago</a>
                        <a href="/lego/sets?theme=Creator" class="btn btn-sm btn-accent">Creator</a>
                      </div>

                </div>
            </div>
        </div>
        <table class="table table-zebra">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Theme</th>
                <th>Year</th>
                <th>Number of Parts</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
              <% sets.forEach(set => { %>
                <tr class="hover">
                  <td>
                    <div class="avatar">
                        <div class="mask mask-squircle w-12 h-12">
                          <img src="<%= set.img_url %>" alt="Lego Set" />
                        </div>
                      </div>
                  </td>
                  <td><b><%= set.name %></b></td>
                  <td>
                    <a href="/lego/sets?theme=<%= set.Theme.name %>" class="btn btn-sm btn-neutral"><%= set.Theme.name %></a>
                  </td>
                  <td><%= set.year %></td>
                  <td><%= set.num_parts %></td>
                  <td>
                    <a href="/lego/sets/<%= set.set_num %>" class="btn btn-sm btn-secondary">Details</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
    </div>
</body>
</html>