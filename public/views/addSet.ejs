<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title>Add Set</title>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mx-auto">
        <div class="hero">
            <div class="hero-content text-center">
                <div class="max-w-md mx-auto">
                    <h1 class="text-4xl md:text-5xl font-bold">Add Set</h1>
                    <p class="py-6">Add your own set! No duplicates.</p>
                </div>
            </div>
        </div>
        
        <div class="flex justify-center">
            <div class="card w-full max-w-md bg-base-100 shadow-xl my-6">
                <div class="card-body">
                    <form action="/lego/addSet" method="POST">
                        <div class="form-control">
                            <label for="name" class="label">
                                <span class="label-text">Name</span>
                            </label>
                            <input type="text" id="name" name="name" required class="input input-bordered">
                        </div>
        
                        <div class="form-control">
                            <label for="year" class="label">
                                <span class="label-text">Year</span>
                            </label>
                            <input type="number" id="year" name="year" required class="input input-bordered">
                        </div>
        
                        <div class="form-control">
                            <label for="num_parts" class="label">
                                <span class="label-text">Number of Parts</span>
                            </label>
                            <input type="number" id="num_parts" name="num_parts" required class="input input-bordered">
                        </div>
        
                        <div class="form-control">
                            <label for="img_url" class="label">
                                <span class="label-text">Image URL</span>
                            </label>
                            <input type="url" id="img_url" name="img_url" required class="input input-bordered">
                        </div>
        
                        <div class="form-control">
                            <label for="theme_id" class="label">
                                <span class="label-text">Theme</span>
                            </label>
                            <select id="theme_id" name="theme_id" required class="select select-bordered">
                                <% themes.forEach(theme => { %>
                                    <option value="<%= theme.id %>"><%= theme.name %></option>
                                <% }) %>
                            </select>
                        </div>
        
                        <div class="form-control">
                            <label for="set_num" class="label">
                                <span class="label-text">Set Number</span>
                            </label>
                            <input type="text" id="set_num" name="set_num" required class="input input-bordered">
                        </div>
        
                        <div class="form-control mt-6">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>